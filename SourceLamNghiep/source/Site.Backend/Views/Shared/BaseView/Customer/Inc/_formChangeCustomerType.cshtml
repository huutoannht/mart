@using Share.Messages.BeScreens.CustomerRes
@model Models.Customer.CustomerModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" data-dismiss="modal" aria-hidden="true"
                class="close">
                &times;</button>
            <h4 id="modal-default-label" class="modal-title">@CustomerRes.ChangeTypeForCustomer <strong>"@Model.ClinicName"</strong></h4>
        </div>
        <div class="modal-body">
            <form id="formInfo" class="form-horizontal" style="padding-top: 0 !important">
                @Html.HiddenFor(m => m.Id)
                @Html.ValidationSummary(string.Empty)
                <div id="divNotifyPopup">
                    @Html.Partial("EditorTemplates/_Notify")
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">@CustomerRes.ClinicId</label>
                    <div class="col-md-4">
                        <label class="control-label">@Model.ClinicId</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">@CustomerRes.ClinicName</label>
                    <div class="col-md-4">
                        <label class="control-label">@Model.ClinicName</label>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CustomerType, new { @class = "col-md-3 control-label" })
                    <div class="col-md-4">
                        @Html.EnumDropDownFor(m => m.CustomerType, new List<CustomerType> { Model.CustomerType }, BackendMessage.Select, new { @class = "form-control" })
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" data-dismiss="modal" class="btn btn-default">@BackendMessage.Close</button>
            <button type="button" class="btn btn-primary" onclick="customer.changeCustomerType()">@BackendMessage.Save</button>
        </div>
    </div>
</div>
