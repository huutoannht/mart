@model Models.Customer.CustomerModel

@if (Model.Images == null || !Model.Images.Any())
{
    <div id="divImageList" class="form-group">
        <div class="col-md-4">
            <input type="file" name="fileImage1" id="fileImage1" accept="image/*" />
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="form-group">
        <div class="col-md-12 mt10">
            <button type="button" class="btn btn-info" onclick="customer.addNewImageClickOnEditCustomer()"><i class="fa fa-plus"></i>@BackendMessage.AddNew</button>
        </div>
    </div>
}