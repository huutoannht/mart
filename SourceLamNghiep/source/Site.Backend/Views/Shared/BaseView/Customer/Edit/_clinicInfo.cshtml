    @Html.LabelFor(m => m.NumberOfChair, new { @class = "col-md-2 control-label" })
    <div class="col-md-4">
        @Html.DropDownListFor(m => m.NumberOfChair, cache.GetCategories(CategoryType.NumberOfChair).ToSelectList(), BackendMessage.Select, new { @class = "form-control" })
    </div>
    @Html.LabelFor(m => m.UsingRC, new { @class = "col-md-2 control-label" })
    <div class="col-md-4">
        @Html.DropDownListFor(m => m.UsingRC, cache.GetCategories(CategoryType.UsingRC).ToSelectList(), BackendMessage.Select, new { @class = "form-control" })
    </div>
</div>

