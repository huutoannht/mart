@using Data.DataContract.CategoryDC
@model Models.Customer.CustomerModel
@{
    var cache = ObjectFactory.GetInstance<ICacheHelper>();
}

<div class="form-group">
    @Html.LabelFor(m => m.ClinicId, new { @class = "col-md-2 control-label" })
    <div class="col-md-4">
        @Html.Label(Model.ClinicId, new { @class = "control-label" })
    </div>
    @Html.LabelFor(m => m.ClinicName, new { @class = "col-md-2 control-label" })
    <div class="col-md-4">
        @Html.Label("", Model.ClinicName)
    </div>
</div>
<div class="form-group">
    @Html.CustomLabelFor(m => m.ClinicEmail, new { @class = "col-md-2 control-label" })
    <div class="col-md-4">
        @Html.Label("", Model.ClinicEmail, new { @class = "control-label" })
    </div>
    @Html.CustomLabelFor(m => m.Website, new { @class = "col-md-2 control-label" })
    <div class="col-md-4">
        @Html.Label("", Model.Website, new { @class = "control-label" })
    </div>
</div>
<div class="form-group">
    @Html.CustomLabelFor(m => m.ClinicPhone, new { @class = "col-md-2 control-label" })
    <div class="col-md-4">
        @Html.Label(Model.ClinicPhone.ToStr(), new { @class = "control-label" })
    </div>
    @Html.CustomLabelFor(m => m.Address, new { @class = "col-md-2 control-label" })
    <div class="col-md-4">
        @Html.Label(Model.Address.ToStr(), new { @class = "control-label" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.City, new { @class = "col-md-2 control-label" })
    <div class="col-md-4">
        @{
            var city = SiteUtils.GetVietNamProvine(Model.City) ?? new EnumModel();
        }
        @Html.Label(city.Name.ToStr(), new { @class = "control-label" })
    </div>
    @Html.LabelFor(m => m.District, new { @class = "col-md-2 control-label" })
    <div class="col-md-4" id="divDistricts">
        @{
            var district = SiteUtils.GetVietNamDistrict(Model.District) ?? new EnumModel();
        }
        @Html.Label(district.Name.ToStr(), new { @class = "control-label" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.NumberOfDentist, new { @class = "col-md-2 control-label" })
    <div class="col-md-4">
        @{
            var numberOfDentist = cache.GetCategories(CategoryType.NumberOfDentist).FirstOrDefault(i => i.Id == Model.NumberOfDentist) ?? new Category();
        }
        @Html.Label(numberOfDentist.Name.ToStr(), new { @class = "control-label" })
    </div>
    @Html.LabelFor(m => m.NumberOfStaff, new { @class = "col-md-2 control-label" })
    <div class="col-md-4">
        @{
            var numberOfStaff = cache.GetCategories(CategoryType.NumberOfStaff).FirstOrDefault(i => i.Id == Model.NumberOfStaff) ?? new Category();
        }
        @Html.Label(numberOfStaff.Name.ToStr(), new { @class = "control-label" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.NumberOfChair, new { @class = "col-md-2 control-label" })
    <div class="col-md-4">
        @{
            var numberOfChair = cache.GetCategories(CategoryType.NumberOfChair).FirstOrDefault(i => i.Id == Model.NumberOfChair) ?? new Category();
        }
        @Html.Label(numberOfChair.Name.ToStr(), new { @class = "control-label" })
    </div>
    @Html.LabelFor(m => m.UsingRC, new { @class = "col-md-2 control-label" })
    <div class="col-md-4">
        @{
            var usingRc = cache.GetCategories(CategoryType.UsingRC).FirstOrDefault(i => i.Id == Model.UsingRC) ?? new Category();
        }
        @Html.Label(usingRc.Name.ToStr(), new { @class = "control-label" })
    </div>
</div>

