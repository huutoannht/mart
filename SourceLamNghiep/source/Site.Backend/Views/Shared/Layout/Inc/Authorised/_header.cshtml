@using Share.Messages.BeScreens.Menu
@{
    var sessionHelper = ObjectFactory.GetInstance<ISessionHelper>();
    var imageName = SiteUtils.GetSiteLogoImageName();
    var imageName3 = SiteUtils.GetSiteLogo3ImageName();
}
<div id="header-topbar-option-demo" class="page-header-topbar">
    <nav id="topbar" role="navigation" style="margin-bottom: 0; z-index: 2;"
        class="navbar navbar-default navbar-static-top">
        <div class="navbar-header">
            <button type="button" data-toggle="collapse" data-target=".sidebar-collapse" class="navbar-toggle">
                <span
                    class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span><span
                    class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a id="logo" class="navbar-brand @(Url.ImageIsExist(imageName) ? "p0" : string.Empty)">
                <span class="fa fa-rocket"></span>
                <span class="logo-text">
                    @if (Url.ImageIsExist(imageName))
                    {
                        <img alt="@SiteUtils.GetSiteName()" class="logo-img" src="@Url.ImageLink(imageName)"/>
                    }
                    else
                    {
                        @SiteUtils.GetSiteName()
                    }
                </span>
                <span style="display: none" class="logo-text-icon">
                    @if (Url.ImageIsExist(imageName3))
                    {
                        <img alt="@SiteUtils.GetSiteName()" class="logo-img" src="@Url.ImageLink(imageName3)"/>
                    }
                </span>
            </a>
        </div>
        <div class="topbar-main">
            <a id="menu-toggle" href="#" class="hidden-xs"><i class="fa fa-bars"></i></a>
            <ul class="nav navbar navbar-top-links navbar-right mbn">
                <li class="dropdown topbar-user pull-right">
                    <a data-hover="dropdown" href="#" class="dropdown-toggle">
                        <span class="hidden-xs">Hello, @sessionHelper.CurrentUser.FullName</span>&nbsp;<span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu dropdown-user pull-right">
                        <li>
                            <a href="@Url.Action("Index", "Profile")">
                                @Menu.Account
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index", "Authen")">
                                @BackendMessage.Logout
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

</div>
