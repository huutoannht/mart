@using Share.Messages.BeScreens.SystemEmailTemplate
@model Models.SystemEmailTemplate.SystemEmailTemplateModel

<div class="row">
    <div class="col-md-12 col-md-12">
        <div class="panel panel-blue">
            <div class="panel-heading">
                @SystemEmailTemplate.EmailTemplate : <strong>@Model.Type.GetEnumDesRes()</strong>.
                @SystemEmailTemplate.Language : <strong>@SiteUtils.GetLanguageName(Model.Language)</strong>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Save", "SystemEmailTemplate", FormMethod.Post, new { id = "formInfo", role = "form", @class = "form-horizontal" }))
                {
                    @Html.HiddenFor(m => m.Id)
                    @Html.HiddenFor(m => m.Type)
                    @Html.HiddenFor(m => m.Language)
                    @Html.ValidationSummary(string.Empty)
                    <div class="form-group">
                        @Html.LabelFor(m => m.Type, new { @class = "col-md-2 control-label" })
                        <div class="col-md-4">
                            <label class="control-label">@Model.Type.GetEnumDesRes()</label>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.CustomLabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label">@BackendMessage.ContentKeys</label>
                        <div class="col-md-10" style="padding-top: 7px">
                            @Html.Partial("_keys")
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Content, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(m => m.Content, new { @class = "form-control" })
                        </div>
                    </div>
                        
                    <div class="form-actions">
                        <div class="col-md-offset-2 col-md-10">
                            <button onclick="systemEmailTemplate.saveClick()" class="btn btn-success" type="button">@BackendMessage.Save</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
