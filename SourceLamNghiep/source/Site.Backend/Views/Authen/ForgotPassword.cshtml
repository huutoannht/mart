@using Share.Messages.BeScreens.Login
@using Share.Messages.BeScreens.RecoverPassword
@model Models.Authen.RecoverPasswordModel
@{
    ViewBag.Title = RecoverPassword.PasswordHelp;
}

<div class="page-form">
    <div class="header-content">
        <h1>@ViewBag.Title</h1>
    </div>
    <div class="body-content">
        <p>@RecoverPassword.PleaseEnterYourEmail</p>
        @using (Html.BeginForm(string.Empty, string.Empty, FormMethod.Post, new { id = "formRecoverPwd", role = "form", @class = "form" }))
        {
            @Html.Partial("EditorTemplates/_Notify")
            @Html.ValidationSummary(string.Empty)
            <div class="form-group">
                <div class="input-icon right">
                    <i class="fa fa-inbox"></i>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", autocomplete = "off", maxlength = "100", placeholder = Login.Email })
                </div>
            </div>
            <div class="form-group">
                <button type="button" onclick="authen.recoverPassword()" class="btn btn-success">@BackendMessage.Submit</button>
                <a href="@Url.Action("Index")" class="btn btn-info">@RecoverPassword.BackToLoginPage</a>
            </div>
            <div class="clearfix"></div>
            <hr>

            <div class="form-group">
                <div class="col-md-12">
                    <div class="pull-right cur-pointer" onclick="site.changeLanguage('vi-VN')">
                        <img src="~/Content/styles/images/vietnam.png" width="20" height="20" alt="english-flag" />
                    </div>
                    <div class="pull-right cur-pointer" onclick="site.changeLanguage('en-US')">
                        <img src="~/Content/styles/images/united-kingdom.png" width="20" height="20" alt="english-flag" />
                    </div>
                </div>
            </div>

            <div class="clearfix"></div>
        }
    </div>
</div>


@section PageJavascript
{
    @Scripts.Render("~/js/authen")
    <script type="text/javascript">
        $(document).ready(function () {
            authen.initRecoverPassword({
                submitRequestPasswordUrl: "@Url.Action("SubmitRequestPassword")",
                indexUrl: "@Url.Action("Index")"
            });
        });
    </script>

}
